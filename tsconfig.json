{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "declarationMap": true,
    "declaration": true,
    "lib": ["es2016", "esnext", "DOM"]
  }
}
